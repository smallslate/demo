div.form-group
	label.col-lg-2.control-label Question
		p.showHideEditor Show Rich Editor 
			input(id="question_",type="checkbox",onchange="hideShowRichEditor(this,200)") 
	div.col-lg-10
		textarea.form-control#question(id="question",name="question",rows="5")
div.form-group
	label.col-lg-2.control-label Answer
		p.showHideEditor Show Rich Editor 
			input(id="answerDescr_",type="checkbox",onchange="hideShowRichEditor(this,400)") 
	div.col-lg-10
		textarea.form-control#answerDescr(name="answerDescr",rows="10")
div.form-group
	label.col-lg-2.control-label Difficulty Level 
	div.col-lg-10
		select.form-control(ng-model="questionObj.difficultyLevel")
			option(value="0") Easy
			option(value="1") Medium
			option(value="2") Hard	
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		